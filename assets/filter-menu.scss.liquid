.filter-menu {
  margin-bottom: 20px;
  display: block;
  background-color: {{ settings.color_pt_bg | default: 'transparent' }};
  border-radius: {{ settings.pt_bg_radius | default: 0 }}px;
  padding: {{ settings.pt_bg_padding | default: 0 }}px;
  border: 1px solid {{ settings.color_pt_bg_border | default: 'transparent' }};
}

.filter-menu .has_group_selected {
  {%- if settings.pt_desktop_always_show_selected -%}display: inherit;{%- endif -%}
}

.filter-group {
  position: relative;
  text-align: left;

    .selected a {
      font-weight: bold;
    }

    .filter-clear {
      position: absolute;
      top: 10px;
      right: 10px;
      border-radius: 10px;
      padding: 0 5px;
      text-decoration: none;
      font-size: 12px;
      line-height: 18px;
      background-color: {{ settings.color_pt_clear_bg  | default: '#EEE' }};
      color: {{ settings.color_pt_clear_text  | default: '#222' }};
      overflow: hidden; 
    }

    .filter-clear:hover {
      background-color: {{ settings.color_pt_clear_bg_hover | default: '#AAA'}};
      color: {{ settings.color_pt_clear_text_hover | default: '#444' }};
    }

    .collection-container
    {
      position: relative;
    }

    .collection-count
    {
      position: absolute;
      right: 0px;
    }

    h4 {
      text-align: left;
      margin-bottom: 10px;
      padding-bottom: 5px;
      padding-right: 45px;
      color: {{ settings.color_pt_header_text | default: '#222' }};
      border-bottom: 1px solid {{ settings.color_pt_header_border | default: '#888' }};
      font-size: {{ settings.pt_header_size | default: '18' }}px;
      {% if settings.pt_header_font_override %}
      font-family: {{ settings.pt_header_font.family }}, {{ settings.pt_header_font.fallback_families }};
      {% endif %}
      font-weight: {{ settings.pt_header_weight | default: 600 }};

      margin-top: 0;
      padding-top: 0;
      border-top: none;
    }


    + .filter-group h4 {
      margin-top: 10px;
      padding-top: 10px;
      border-top: 1px solid {{ settings.color_pt_header_top_border | default: 'transparent' }};
    }

    .filter-clear {
      top: 0px;
    }

    + .filter-group .filter-clear {
      top: 10px;
    }

    ul {
      display: block;
      margin: 0;
      padding: 0;
      font-size: 0;
    }

    ul li {
      display: block;
      font-size: 12px;
    }

    li a {
      display: inline-block;
      margin-left: 6px;
      text-decoration: none;
      padding: 0;
      font-size: 13px;
      text-indent: -{{ settings.pt_checkbox_size | default: 20 | plus: 6 }}px;
      padding-left: {{ settings.pt_checkbox_size | default: 20 | plus: 6 }}px;
    }

    li.inactive {
      opacity: 0.6;
    }

    li a, li a:visited, .collection-count {
      color: {{ settings.color_pt_links  | default: '#222' }};
      font-size: {{ settings.pt_links_size  | default: '13' }}px;
      {% if settings.pt_links_font_override %}
      font-family: {{ settings.pt_links_font.family }}, {{ settings.pt_links_font.fallback_families }};
      {% endif %}
      font-weight: {{ settings.pt_links_weight | default: 300 }};
    }

    .collection-count {
      color: {{ settings.color_pt_counts_color  | default: '#888' }};
    }

    li div {
      line-height: {{ settings.pt_links_size  | default: '13' | plus: 2 | plus: settings.pt_filter_padding }}px;
    }

    li.selected a {
      color: {{ settings.color_pt_links_selected | default: '#333' }};
    }

    li:hover a {
      color: {{ settings.color_pt_links_hover | default: '#444' }};
    }
}

.filter-menu-none-selected li a, .has_collection_counts a {
  margin-right: {{ settings.pt_links_size  | default: '13' | times: 2.5 }}px;
}

.sort-selector {
    margin: 0 10px;
}

@font-face {
  font-family: 'pt-font';
  src:  url('{{ 'pt-font.eot' | asset_url }}');
  src:  url('{{ 'pt-font.eot' | asset_url }}#iefix') format('embedded-opentype'),
    url('{{ 'pt-font.ttf' | asset_url }}') format('truetype'),
    url('{{ 'pt-font.woff' | asset_url }}') format('woff'),
    url('{{ 'pt-font.svg' | asset_url }}#icomoon') format('svg');
  font-weight: normal;
  font-style: normal;
}

i.check-icon,
.pt-display-dropdown .filter-clear,
.pt-display-dropdown .menu-trigger:after,
.filter-group h4:after {
  font-family: 'pt-font' !important;
  speak: none;
  font-style: normal;
  font-weight: normal;
  font-variant: normal;
  text-transform: none;
  line-height: 1;
  text-indent: 0;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;

  color: {{ settings.pt_checkbox_primary_color | default: '#888' }};
}

.selected i.check-icon {
  color: {{ settings.pt_checkbox_secondary_color | default: '#444' }};
}

i.check-icon:before,
.pt-display-dropdown .filter-clear:before {
  content: "\e{{ settings.pt_checkbox_style | times: 4 | plus: 800 }}";
  background-repeat: no-repeat;
  display: inline-block;
  margin-top: 0px;
  vertical-align: {{ settings.pt_checkbox_checkbox_align | default: 'middle' }};
  height: {{ settings.pt_checkbox_size | default: 20 | plus: 2 }}px;
  line-height: {{ settings.pt_checkbox_size | default: 20 | plus: 2 }}px;
  width: {{ settings.pt_checkbox_size | default: 20 | plus: 2 }}px;
  font-size: {{ settings.pt_checkbox_size | default: 20 }}px;
}

a:hover i.check-icon:before {
  content: "\e{{ settings.pt_checkbox_style | times: 4 | plus: 801 }}";
}

.selected i.check-icon:before {
  content: "\e{{ settings.pt_checkbox_style | times: 4 | plus: 802 }}";
}

.selected a:hover i.check-icon:before {
  content: "\e{{ settings.pt_checkbox_style | times: 4 | plus: 803 }}";
}

.fm-search-box {
  display: none;
}

.pt-display-search .fm-search-box {
  display: inherit;
  margin: 10px;
  width: calc(100% - 20px);
}

