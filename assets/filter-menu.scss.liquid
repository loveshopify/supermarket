      text-decoration: none;
      animation: none;
      -webkit-animation: none;
    }
}

.pt-apply-disabled, .pt-apply-disabled:hover {
  background-color: {{ settings.pt_apply_button_disabled_color | default: '#CCCCCC' }};
  animation: none;
  -webkit-animation: none;
}

@media screen and (min-width: {{ settings.pt_sticky_min_width | default: '767px' }}) {
  .pt-sticky-mode {
    position: sticky;
    position: -webkit-sticky;
    top: {{ settings.pt_sticky_offset | default: '25px' }}; 
  }
}

