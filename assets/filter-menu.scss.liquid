@-webkit-keyframes bg-color {
  0% { background-color: {{ settings.pt_apply_button_color | default: '#0084FF' }}; }
  50% { background-color: {{ settings.pt_apply_button_hover_color | default: '#0670Cf' }}; }
  100% { background-color: {{ settings.pt_apply_button_color | default: '#0084FF' }}; }
}

@keyframes bg-color {
  0% { background-color: {{ settings.pt_apply_button_color | default: '#0084FF' }} }
  50% { background-color: {{ settings.pt_apply_button_hover_color | default: '#0670Cf' }}; }
  100% { background-color: {{ settings.pt_apply_button_color | default: '#0084FF' }} }
}

.pt-apply {
  -webkit-border-radius: 28;
  -moz-border-radius: 28;
  border-radius: 28px;
  color: #ffffff;
  font-size: 18px;
  background-color: {{ settings.pt_apply_button_color | default: '#0084FF' }};
  text-decoration: none;
  margin-top: 20px;
  margin-left: 0;
  width: 100%;
  font-weight: bold;
  animation: bg-color 3s infinite;
  -webkit-animation: bg-color 3s infinite;

    &:hover {
