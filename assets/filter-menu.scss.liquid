    ul {
    {%- assign color_map = 'royal-blue,#4169e1|ivory,#FFFFF0|lavender,#E6E6FA|lilac,#c8a2c8|plum,#DDA0DD|fuchsia,#FF00FF|magenta,#FF00FF|indigo,#4B0082|peach,#FFDAB9|grape,#8B008B|teal,#008080|cyan,#00FFFF|champagne,#fad6a5|beige,#e4caab|black,#222|blue,#5566FF|brown,#7a4a38|camel,#c9802b|clear,#e6f5f5|gold,gold|green,#55DD99|gray,#999|grey,#999|leopard,#eb9e48|mint,#7bdea7|multi,#eb9e48|multi-color,#eb9e48|mustard,mustard|navy-blue,#000073|navy,#000073|nude,#f3e0c9|cream,#ffe9cf|orange,orange|pink,#f436a1|purple,purple|red,red|rose,#edd0d6|rust,#c34c1e|salmon,salmon|silver,silver|tan,tan|taupe,#b1a79b|white,#FFFFFF|wine,#a61a3b|yellow,yellow|coral,#FFD8CA|ecru,#F3EFE0|oatmeal,#E0DCC8|light-blue,#c5e3ed|cranberry,#9f000f|turquoise,#00c5cd|burgundy,#8c001a|golden,#ffd700|khaki,#f0e68c|heather-grey,#606060|heather-black,#303030|violet,#7F00FF' | split: '|' -%}
