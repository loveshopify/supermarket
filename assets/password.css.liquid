.mfp-close {
/*   color:#333; */
  font-size:3em;
}
.errors {
  color:#f00;
}
.m15{
  margin: 15px;
}
.password-main {
    display: flex;
    height: calc(100vh - 135px);
    align-items: center;
}

.template-password{
  z-index: 1;
  position: relative;
}
.template-password::after, .mfp-bg:after{
  content: "";
  background-size: cover !important;
  background-position: center !important;
  background-repeat: no-repeat !important;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  position: absolute;
  z-index: -1;   
  width: 100%;
  height: 100%;
  display: block;
}